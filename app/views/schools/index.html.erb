<h1>Listing Schools</h1>

<div id="map"></div>


<!--<% @schools.each do |school| %>-->
  <%= image_tag("logo/#{school.name}.jpg")%>
<!--<% end %>-->


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Num</th>
      <th>Lat</th>
      <th>Lng</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.num %></td>
        <td><%= school.lat %></td>
        <td><%= school.lng %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New School', new_school_path %>

